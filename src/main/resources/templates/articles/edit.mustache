{{>layouts/header}}

{{#article}}
    <h2 style="text-align: center;">Edit Form</h2>
<form class="container" action="/articles/update" method="post" style="border: 1px solid #ccc; padding: 20px; border-radius: 8px; margin-top: 15px; width:50%;">
    <input name="id" type="hidden" value="{{id}}">
    <div class="mb-3">
        <label class="form-label">제목</label>
        <input type="text" class="form-control" name="title" value="{{article.title}}">
    </div>
    <div class="mb-3">
        <label class="form-label">내용</label>
        <textarea class="form-control" rows="3" name="content">{{article.content}}</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a href="/articles/{{article.id}}" class="btn btn-primary">Back</a>
</form>
{{/article}}
{{>layouts/footer}}